{
    "env": {
        "browser": true,
        "es2021": true
    },
    "settings":{
        "react":{
            "version": "detect"
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "single",
            { "allowTemplateLiterals": true }
        ], 
        "react/no-unescaped-entities": "off",
        "@typescript-eslint/no-empty-function": "off"
    },
    "ignorePatterns":["example/webpack.config.js", "example/metro.config.js", "example/babel.config.js", "babel.config.js"]
}
